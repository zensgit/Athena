<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="020-1" author="ecm-system">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="saved_searches"/>
            </not>
        </preConditions>
        <comment>Create saved_searches table</comment>
        <createTable tableName="saved_searches">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="query_params" type="jsonb">
                <constraints nullable="false"/>
            </column>
            <column name="pinned" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="saved_searches" indexName="idx_saved_searches_user_id">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="020-2" author="ecm-system">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <and>
                <tableExists tableName="saved_searches"/>
                <not>
                    <columnExists tableName="saved_searches" columnName="pinned"/>
                </not>
            </and>
        </preConditions>
        <comment>Add pinned column to saved_searches</comment>
        <addColumn tableName="saved_searches">
            <column name="pinned" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
