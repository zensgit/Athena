<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="017-1" author="ecm-system">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <tableExists tableName="mail_accounts"/>
            <columnExists tableName="mail_accounts" columnName="password"/>
        </preConditions>
        <comment>Allow null password for OAuth2 mail accounts</comment>
        <dropNotNullConstraint tableName="mail_accounts"
                               columnName="password"
                               columnDataType="VARCHAR(255)"/>
    </changeSet>

</databaseChangeLog>
