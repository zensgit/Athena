<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="014-1" author="ecm-system">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="mail_accounts"/>
            </not>
        </preConditions>
        <comment>Create mail_accounts table</comment>
        <createTable tableName="mail_accounts">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="host" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="port" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="security" type="VARCHAR(50)" defaultValue="SSL">
                <constraints nullable="false"/>
            </column>
            <column name="is_enabled" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="poll_interval_minutes" type="INTEGER" defaultValue="10"/>
            <column name="created_date" type="TIMESTAMP" defaultValueComputed="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT" defaultValue="0"/>
            <column name="is_deleted" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="deleted_at" type="TIMESTAMP"/>
            <column name="deleted_by" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="014-2" author="ecm-system">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="mail_rules"/>
            </not>
        </preConditions>
        <comment>Create mail_rules table</comment>
        <createTable tableName="mail_rules">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="account_id" type="${uuid_type}">
                <constraints foreignKeyName="fk_mail_rules_account" references="mail_accounts(id)"/>
            </column>
            <column name="priority" type="INTEGER" defaultValue="100">
                <constraints nullable="false"/>
            </column>
            <column name="folder" type="VARCHAR(255)" defaultValue="INBOX"/>
            <column name="subject_filter" type="VARCHAR(255)"/>
            <column name="from_filter" type="VARCHAR(255)"/>
            <column name="to_filter" type="VARCHAR(255)"/>
            <column name="body_filter" type="TEXT"/>
            <column name="attachment_filename_include" type="VARCHAR(255)"/>
            <column name="attachment_filename_exclude" type="VARCHAR(255)"/>
            <column name="max_age_days" type="INTEGER"/>
            <column name="include_inline_attachments" type="BOOLEAN" defaultValue="false"/>
            <column name="action_type" type="VARCHAR(50)" defaultValue="ATTACHMENTS_ONLY"/>
            <column name="mail_action" type="VARCHAR(50)" defaultValue="MARK_READ"/>
            <column name="mail_action_param" type="VARCHAR(255)"/>
            <column name="assign_tag_id" type="${uuid_type}">
                <constraints foreignKeyName="fk_mail_rules_tag" references="tags(id)"/>
            </column>
            <column name="assign_folder_id" type="${uuid_type}">
                <constraints foreignKeyName="fk_mail_rules_folder" references="nodes(id)"/>
            </column>
            <column name="created_date" type="TIMESTAMP" defaultValueComputed="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT" defaultValue="0"/>
            <column name="is_deleted" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="deleted_at" type="TIMESTAMP"/>
            <column name="deleted_by" type="VARCHAR(255)"/>
        </createTable>
        <createIndex tableName="mail_rules" indexName="idx_mail_rules_priority">
            <column name="priority"/>
        </createIndex>
        <createIndex tableName="mail_rules" indexName="idx_mail_rules_account">
            <column name="account_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="014-3" author="ecm-system">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="mail_processed_messages"/>
            </not>
        </preConditions>
        <comment>Create mail_processed_messages table</comment>
        <createTable tableName="mail_processed_messages">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="${uuid_type}">
                <constraints nullable="false" foreignKeyName="fk_mail_processed_account" references="mail_accounts(id)"/>
            </column>
            <column name="rule_id" type="${uuid_type}">
                <constraints foreignKeyName="fk_mail_processed_rule" references="mail_rules(id)"/>
            </column>
            <column name="folder" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="uid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="subject" type="VARCHAR(255)"/>
            <column name="received_at" type="TIMESTAMP"/>
            <column name="processed_at" type="TIMESTAMP" defaultValueComputed="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="TEXT"/>
        </createTable>
        <createIndex tableName="mail_processed_messages" indexName="ux_mail_processed_account_folder_uid" unique="true">
            <column name="account_id"/>
            <column name="folder"/>
            <column name="uid"/>
        </createIndex>
        <createIndex tableName="mail_processed_messages" indexName="idx_mail_processed_account">
            <column name="account_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
