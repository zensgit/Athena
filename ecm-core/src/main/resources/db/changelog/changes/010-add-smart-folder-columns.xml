<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="010-1" author="ecm-system">
        <comment>Add smart folder flags and query criteria</comment>
        <addColumn tableName="folders">
            <column name="is_smart" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="query_criteria" type="jsonb"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
